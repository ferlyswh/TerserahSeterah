<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- disable state. -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="6dp"/>
            <solid android:color="@color/dim_gray"/>
            <stroke android:color="@color/colorPrimaryDark" android:width="64dp"/>
        </shape>
    </item>

    <!--released state. -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="6dp"/>
            <stroke android:color="@color/dim_gray" android:width="6dp"/>
        </shape>
    </item>

    <!--pressed state. -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="128dp"/>
            <solid android:color="@color/dim_gray"/>
            <stroke android:color="@color/dark_gray" android:width="6dp"/>
        </shape>
    </item>

</selector>